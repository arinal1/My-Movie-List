<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

        <ImageView
                android:id="@+id/ivPoster"
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:contentDescription="@string/poster"
                android:src="@drawable/poster_a_star"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="10dp">

            <TextView
                    android:id="@+id/txTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Title of the movie: For View Only"
                    android:textSize="18sp"
                    tools:ignore="HardcodedText"/>

            <TextView
                    android:id="@+id/txRelease"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="31 Januari 2019"
                    android:textColor="@color/textLight"
                    tools:ignore="HardcodedText"
                    android:layout_marginTop="2dp"/>

            <TextView
                    android:id="@+id/txGenre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Action, Adventure, Comedy"
                    android:textColor="@color/textLight"
                    tools:ignore="HardcodedText"/>

            <TextView
                    android:id="@+id/txTitleOverview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Seasoned musician Jackson Maine discovers — and falls in love with — struggling artist Ally. She has just about given up on her dream to ..."
                    tools:ignore="HardcodedText"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"/>
        </LinearLayout>
    </LinearLayout>
    <View
            android:id="@+id/separator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#9A000000"/>
</LinearLayout>